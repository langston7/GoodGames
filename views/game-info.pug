extends layout

block content
    each game in games
        div(class="game-info-container")
            div(class="game-info-div-1")
                img(class='gameImage-info' src= game.imgURL)
                h2(class='game-info-header') #{game.name}
                span(class='developer') #{game.developer}
                span(class='releaseDate') #{game.releaseDate}
                p(class='game-info-description') #{game.description}
                button(class='add-to-game-shelf')
