div(class="review-container")
  div(class="header")
    h2(class="reviews-title") Reviews
    table(class="review-table")
      tr
        th Username
        th Comment
        th Rating
        div(class='edit-delete-container')
          form(action=`/games/${game.id}/reviews/${userReview.id}/edit` method='get' class='review-form')
            button(class="review-button-redirect") Edit
          //- form(action=`/games/${game.id}/reviews/new` method='get' class='review-form')
          //-   button(class="review-button-redirect") Delete
      each review in reviews
        tr(class="review-comment")
          th(class="review-userId") #{review.userId}
          th(class="review-content") #{review.content}
          th(class="review-rating") #{review.rating}